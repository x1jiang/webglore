}

.nav_text h2.hightlighted
{
	margin: 0px;
	color: #00CCFF;
}

.nav_icon
{
}
.nav_text
{
}
.nav_text h2
{
	margin: 0px;
	font-size: 24px;
	font-family: 'Helvetica Neue';
