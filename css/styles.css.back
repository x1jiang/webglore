}
.nav_text p
{
	font-size: 14px;
	font-family: 'Helvetica Neue';
	color: #BBBBBB;
	margin:  0%;
}

ul#tabs  li
{/*setting for FF and other standards compliant browsers*/
	#display: block /*setting for IE7*/
	_display: block /*setting for IE6*/
	display: inline;
	float: left;
	list-style-type: none;
	margin: 0px;
	padding: 10px 20px;
	max-width: 150px;
	text-decoration: none;
	font-family: 'Helvetica Neue';
	font-size: 18px;
	font-weight: bold;
	color: #AAAAAA;
	border-right: 2px solid #AAAAAA;
}
#tabs
{
	margin-top: 10px;
    margin-left: 10px;
    padding: 0px;
}
ul#tabs li.target
{
	background-color: #EEEEEE;
	color: #00CCFF;
	font-weight:bold;
	border-top-left-radius: 10px;
	border-right: 0px;
	-webkit-box-shadow: 4px 0px 5px -3px #888 ;
}
ul#tabs li:hover
{
	color: #FFB300;
}
ul#tabs li.target:hover
{
	color: #00CCFF;
}

#right_container
{
	height: 90%;
	width: 65%;
	float: right;
	margin-left: 10px;
	margin-right: 10px;
	margin-top: 30px;
}
#header
{
	padding-left: 2%;
	padding-top: 1%;
	height: 6%;
	background-color: #EEEEEE;
}
#header h2
{
	/*margin: 0px;
	font-size: 28px;
	font-family: 'Helvetica Neue';
	color: #AAAAAA;*/

